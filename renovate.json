{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["quay.io/kairos/kairos-ubuntu-22-lts"],
      "versioning": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-k3sv\\d+\\.\\d+\\.\\d+\\+k3s\\d+$"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Earthfile$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)(\\s+versioning=(?<versioning>.*?))?\\sARG\\s+.+_VERSION=(?<currentValue>.*?)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": [
        "^earthly\\.sh$"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "earthly/earthly",
      "matchStrings": [
        "earthly\\/earthly:(?<currentValue>.*?)\\s"
      ],
      "versioningTemplate": "semver-coerced"
    },
    {
      "fileMatch": [
        "^roles/.+/tasks/.+\\.yml$"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "#\\s*renovate:(\\s*versioning=(?<versioning>.*?))?\\n\\s*image:\\s*(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": [
        "^plays/kairos/upgrade\\.yml$"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "#\\s*renovate:\\sdepName=(?<depName>.*?)\\n\\s+kairos_version: \"(?<currentValue>.*?)\""
      ]
    },
    {
      "datasourceTemplate": "helm",
      "fileMatch": [
        "^plays/k8s/.+/tasks\\.yml$"
      ],
      "matchStrings": [
        "spec:\\n +chart: (?<depName>.*?)(?:\\n +repo: (?<registryUrl>.*?))?(?:\\n +valuesContent: \\|-\\n[\\s\\S]*?)?\\n +version: \"(?<currentValue>.*?)\""
      ]
    },
    {
      "fileMatch": [
        "^kustomization/.+/kustomization\\.yml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s(?<datasource>.*?)\\sdepName=(?<depName>.*?)\\n\\s+newTag: (?<currentValue>.*?)\\n",
        "#\\s*renovate:\\s(?<datasource>.*?)\\n\\s+- https://raw\\.githubusercontent\\.com/(?<depName>.*?)/(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ]
    }
  ]
}
